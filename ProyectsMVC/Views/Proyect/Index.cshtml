@model IEnumerable<ProyectsMVC.Logica.Models.ViewModel.ProyectsIndexViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Proyects</h2>

@Html.ActionLink(" ", "Create", "Proyect", null, new { @class = "btn btn-primary fas fa-plus-circle" })


<table class="table table-bordered">
    <tr>
        <td>Tasks</td>
        <td>@Html.DisplayNameFor(model => model.Title)</td>
        <td>@Html.DisplayNameFor(model => model.Details)</td>
        <td>@Html.DisplayNameFor(model => model.ExpectedCompletionDate)</td>
        <td>@Html.DisplayNameFor(model => model.CreatedAt)</td>
        <td>@Html.DisplayNameFor(model => model.UpdatedAt)</td>
        <td></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(" ", "Index", "Tasks", new { ProyectId = item.Id }, new { @class = "btn btn-primary fas fa-tasks" })
            </td>
            <td>@Html.DisplayFor(model => item.Title)</td>
            <td>@Html.DisplayFor(model => item.Details)</td>
            <td>@Html.DisplayFor(model => item.ExpectedCompletionDate)</td>
            <td>@Html.DisplayFor(model => item.CreatedAt)</td> 
            <td>@Html.DisplayFor(model => item.UpdatedAt)</td>
            <td>

                @Html.ActionLink(" ", "Edit", "Proyect", new { id = item.Id }, new { @class = "btn btn-primary btn-sm fas fa-edit" })
                @Html.ActionLink(" ", "Details", "Proyect", new { id = item.Id }, new { @class = "btn btn-primary btn-sm fas fa-info-circle" })
                @Html.ActionLink(" ", "Delete", "Proyect", new { id = item.Id }, new { @class = "btn btn-primary btn-sm fas fa-trash" })
               </td>
        </tr>
    }

</table> 