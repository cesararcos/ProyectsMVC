@model ProyectsMVC.Logica.Models.ViewModel.ShippingCreateCost
@{
    ViewBag.Title = "CreateMethodPayment";
}

<h2>CreateMethodPayment</h2>

<form action="/ProductDetail/CreateMethodPayment" method="post" enctype="multipart/form-data">

    <div class="form-row">
        <div class="form-group col-md-2">
            @Html.LabelFor(m => m.ShippingSeller, new { @class = "control-label" })
        </div>
        <div class="form-group col-md-4">
            @Html.CheckBoxFor(m => m.ShippingSeller, new { @class = "control-label" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            @Html.LabelFor(m => m.ShippingClient, new { @class = "control-label" })
        </div>
        <div class="form-group col-md-4">
            @Html.CheckBoxFor(m => m.ShippingClient, new { @class = "control-label" })
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12">
            <br />
            <button type="submit" value="Comprar" class="btn btn-primary"><i class="fas fa-save"></i></button>
        </div>
    </div>
</form>