@model ProyectsMVC.Logica.Models.ViewModel.ShippingCreateCost
@{
    ViewBag.Title = "Create Method Payment";
}

<h2>Create Method Payment</h2>
<br />
<br />
<form action="/ProductDetail/CreateMethodPayment" method="post" enctype="multipart/form-data">

    <div class="form-row">
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.ShippingSeller, new { @class = "control-label" })
        </div>
        <div class="form-group col-md-4">
            @Html.CheckBoxFor(m => m.ShippingSeller, new { @class = "control-label" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.ShippingClient, new { @class = "control-label" })
        </div>
        <div class="form-group col-md-4">
            @Html.CheckBoxFor(m => m.ShippingClient, new { @class = "control-label" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            @Html.LabelFor(m => m.MethodPayment, new { @class = "control-label" })
        </div>
        <div class="form-group col-md-3">
            @Html.DropDownListFor(m => m.MethodPayment, new SelectList(ViewBag.MethodPayment, "Id", "Name"), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12">
            <br />
            <button type="submit" value="" class="btn btn-primary">Confirmar Comprar</button>
        </div>
    </div>
</form>