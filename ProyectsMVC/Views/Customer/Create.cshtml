@model ProyectsMVC.Logica.Models.BindingModel.CustomerCreateBindingModel
    @{
        ViewBag.Title = "Create";
    }

    <h2>Crear Usuario</h2>
    <br />
    <p>
        In this module you can create your user and so you can buy and sell successfully
    </p>
    <br />
    <form action="/Customer/Create" method="post" enctype="multipart/form-data">

        <div class="form-row">
            <div class="form-group col-md-5">
                @Html.LabelFor(m => m.DocumentTypeId, new { @class = "col-md-12 control-label" })
            </div>
            <div class="col-md-1">
                @Html.DropDownListFor(m => m.DocumentTypeId, new SelectList(ViewBag.DocumentTypes, "Id", "Name"), new { @class = "form-control" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.DocumentNumber, new { @class = "col-md-12 control-label" })
            </div>
            <div class="form-group col-md-4">
                @Html.TextBoxFor(m => m.DocumentNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DocumentNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-12 control-label" })
            </div>
            <div class="form-group col-md-4">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.SecondName, new { @class = "col-md-12 control-label" })
            </div>
            <div class="form-group col-md-4">
                @Html.TextBoxFor(m => m.SecondName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SecondName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.Surname, new { @class = "col-md-12 control-label" })
            </div>
            <div class="form-group col-md-4">
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.SecondSurname, new { @class = "col-md-12 control-label" })
            </div>
            <div class="form-group col-md-4">
                @Html.TextBoxFor(m => m.SecondSurname, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SecondSurname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.Telephone, new { @class = "col-md-12 control-label" })
            </div>
            <div class="form-group col-md-4">
                @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.Address, new { @class = "col-md-12 control-label" })
            </div>
            <div class="form-group col-md-4">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.CityId, new { @class = "col-md-12 control-label" })
            </div>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.CityId, new SelectList(ViewBag.Cities, "Id", "Name"), new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12">
                <br />
                <button type="submit" value="" class="btn btn-primary">Crear Usuario</button>
            </div>
        </div>
    </form>
